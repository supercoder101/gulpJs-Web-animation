include ../_var/_common.pug

block vars

include ../_mixin/_common.pug
include ../_mixin/_svg.pug

doctype html
html(lang="ja")
  head
    include ./_head.pug
  body
    .l-page.js-pjax-page(data-page-id=page.id)
      .l-dummy-scroll.js-dummy-scroll
      .js-pjax-contents-before
        block contentFixedBefore
      .l-contents.js-contents.js-pjax-contents
        block content
      .js-pjax-contents-after
        block contentFixedAfter
      include ../_modules/_global.pug
      include ../_modules/_preloader.pug
    block script
    script(src=`${data.meta.path}/js/main.js` async)
